---
ecmaFeatures:
  modules: true

parser:
  babel-eslint

env:
  es6: true
  node: true
  mocha: true

extends: 
  eslint:recommended

# http://eslint.org/docs/rules/
rules:
  # Possible Errors
  comma-dangle: [1, never]
  no-inner-declarations: [1, functions]
  no-invalid-regexp: 2
  no-irregular-whitespace: 1
  no-negated-in-lhs: 1
  no-obj-calls: 1
  no-regex-spaces: 1
  no-sparse-arrays: 1
  no-unexpected-multiline: 1
  no-unreachable: 2
  use-isnan: 2
  valid-jsdoc: 1
  valid-typeof: 1
  no-eval: 2
  eqeqeq: 2
  default-case: 2

  # Best Practices
  
  # Strict
  strict: 1

  # Variables
  init-declarations: 0
  no-catch-shadow: 1
  no-delete-var: 2
  no-label-var: 2
  no-shadow-restricted-names: 1
  no-shadow: 1
  no-undef-init: 1
  no-undef: 1
  no-undefined: 1
  no-unused-vars: 1
  no-use-before-define: 1
  no-case-declarations: 1

  # Node.js and CommonJS
  callback-return: 1
  global-require: 1
  handle-callback-err: 1
  no-mixed-requires: 0
  no-new-require: 0
  no-path-concat: 1
  no-process-exit: 1
  no-restricted-modules: 0
  no-sync: 0

  # Stylistic Issues
  max-nested-callbacks: [1, 1]
  max-statements: [2, 31]
  no-console: 1
  semi: [1, never]
  indent: [1, tab, {SwitchCase: 1}]
  no-mixed-spaces-and-tabs: 1
  no-extra-semi: 1
  no-unused-expressions: 1

  # ECMAScript 6
  no-var: 2
